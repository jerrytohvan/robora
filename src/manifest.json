{
  "manifest_version": 2,
  "name": "Robora",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["clippy.css"],
      "js": [
        "jquery-1.8.2.min.js",
        "clippy.js",
        "sounds-mp3.js",
        "agent.js",
        "rocky-actions.js",
        "agent.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'none'",
  "web_accessible_resources": [
    "content.styles.css",
    "icon-128.png",
    "icon-34.png",
    "map.png"
  ]
}
